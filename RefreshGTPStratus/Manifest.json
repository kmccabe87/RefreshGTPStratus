{
  "manifest_version": 3,
  "name": "GTP Stratus Cache Cleaner",
  "version": "1.0",
  "description": "Clears cache and refreshes all GTP Stratus tabs.",
  "permissions": [
    "browsingData",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.gtpstratus.com/*"
  ],
  "action": {
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}